{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true
  },
  "exclude": ["examples"]
}
